<table tal:attributes="class view/css_mapping/table" i18n:domain="opengever.tabbedview">
    <thead>
        <colgroup>
            <col tal:repeat="th view/columns" 
                 tal:attributes="class python:len(th[1]) and 'col-'+th[1] or 'col'" />
        </colgroup>
        <tr>
            <tal:th tal:repeat="th view/columns">
                <th tal:attributes="id python:view.css_mapping['th_prefix']+th[1];
                                    class python:view.sortable_class(th[1])">
                    <span i18n:translate="" tal:content="python: th[0]" /> 
                </th>
            </tal:th>
        </tr>
    </thead>
    <tbody>
        <tr tal:repeat="content view/contents">
            <td tal:repeat="col view/columns">
                <tal:td replace="structure python: view.get_value(content, col)" />
            </td>
        </tr>
    </tbody>
</table>
